<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_phone_background"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/iv_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/img_teller" />

    <TextView
        android:id="@+id/tv_userid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_identity"
        android:background="@color/colorTransparentGray"
        android:gravity="center"
        android:text="3号"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_role_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_userid"
        android:layout_centerHorizontal="true"
        android:background="@color/colorTransparentGray"
        android:gravity="center"
        android:text="预言家"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_speeching"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_role_type"
        android:layout_marginTop="16dp"
        android:background="@color/colorTransparentGray"
        android:gravity="center"
        android:text="正在发言中..."
        android:textColor="@color/colorWhite"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_black_8dp_corner"
        android:text="结束发言"
        android:textColor="@color/colorOrangeRed"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_exit_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_black_8dp_corner"
        android:text="退水"
        android:textColor="@color/colorOrangeRed"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_self_destruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_black_8dp_corner"
        android:text="自爆"
        android:textColor="@color/colorOrangeRed"
        android:visibility="gone" />


</RelativeLayout>